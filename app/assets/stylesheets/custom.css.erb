*{padding: 0; margin: 0px; box-sizing: border-box;}
body{height: 900px;}
header {
	padding: 0px;
	color: #FFF;
  height: 30vh;
  min-height: 15rem;
	text-shadow: 1px 1px 1px #333;
  color: white;
  background-image: url(<%= asset_path 'kn-header.jpg' %>) !important;
  background-repeat: no-repeat;
  background-size: cover; 
}

footer {
	background-image: linear-gradient(to right, #D276A3 , #D43D65);
	text-align: center;
	width: 100%;
	height: 40vh;
  min-height: 20rem;
	background-size: cover;
	background-attachment: fixed;
	position: relative;
	overflow: hidden;
	border-radius: 85% 85% 0 0 / 30%;
}
footer .overlay{
	width: 100%;
	height: 100%;
	padding: 25px;
	color: #FFF;
	text-shadow: 1px 1px 1px #333;	
}

.table_header {
  font-weight: bold;
  background-color: rgb(191, 191, 191);
}

.social-box {
  margin: 0 auto;
  width: 400px;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
}

.social-box img {
  width: 35px;
  margin-right: 5px;
}

.info_section {
  color: #ffffff;
  font-family: 'Poppins', sans-serif;
}

.info_section h5 {
  margin-bottom: 12px;
  font-size: 26px;
}

.info_logo-box {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
}

.info_logo-box h2 {
  font-weight: bold;
  padding: 5px 35px;
  border-bottom: 1.5px solid #8547ca;
}

.info_section ul {
  padding: 0;
}

.info_section ul li {
  list-style-type: none;
  margin: 3px 0;
}

.info_section ul li a {
  color: #ffffff;
}

.info_section ul li a:hover {
  color: #8547ca;
}

.info_section .form_container input {
  width: 225px;
  height: 40px;
  padding: 10px;
}

.info_section .form_container button {
  border: none;
  outline: none;
  padding: 8px 30px;
  margin-top: 15px;
  font-size: 15px;
  text-transform: uppercase;
}

#flag_fr div {
  padding 20px;
  vertical-align: middle;
  display: inline-block;
}

#flag_en div {
  padding 20px;
  vertical-align: middle;
  display: inline-block;
}

#icon_fr {
  display: inline-block;
  width: 42px;
  height: 24px;
  vertical-align: middle;
  background-image: url(<%= asset_path 'Flag_of_France.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover; 
}

#icon_en {
  width: 42px;
  height: 24px;
  vertical-align: middle;
  background-image: url(<%= asset_path 'Flag_of_USA.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover; 
}

h1 {
	font-family: 'Dancing Script', cursive;
	font-size: 80px;
	margin-bottom: 30px;
}

#kn-subtitle {
	font-family: 'Open Sans';
  font-size: 20px;
  font-weight: bold;
	margin-bottom: 20px;
  color: #D43D65
}

#kn-label {
	font-family: 'Dancing Script';
  font-weight: bold;
  font-size: 18px;
	margin-bottom: 5px;
}


#kn-button {
  background-color: #66B0D7; /* For browsers that do not support gradients */
  background-image: linear-gradient(to right, #D276A3 , #D43D65);
  padding: 10px 20px;
  margin: 20px 20px;
  border-radius: 20px;
  color: white;
  text-transform: uppercase;
  font-size: 12px;
}
#kn-button:hover{
	cursor: pointer;
}

#kn-value {
  font-family: 'Dancing Script';
  font-size: 16px;
  padding: 2px 2px;
  margin: 2px 2px;
  color: black;
  font-weight: bold;
  text-align: left;
}

.custom_border {
    border: 4px solid white;
}   

.form-control {
    display:initial !important;
}

.kn-main {
  padding: 5px;
  color: #3649D2;
	height: 800px;
	font-size: 16px;
}

div {
  padding: 5px;
}